            <Font size="16.0" />
         </font>
      </Label>
      <Button fx:id="cancelButton" layoutX="592.0" layoutY="462.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="118.0" text="Cancel" />
      <Label fx:id="actionLabel" layoutX="14.0" layoutY="462.0" text="Action taken: [action]">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Label fx:id="statusLabel" alignment="CENTER" layoutX="7.0" layoutY="404.0" prefHeight="25.0" prefWidth="844.0" textFill="#f83838">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Rectangle fx:id="taskBar" arcHeight="5.0" arcWidth="5.0" fill="DODGERBLUE" height="30.0" layoutY="-1.0" stroke="BLACK" strokeType="INSIDE" width="851.0" />
      <ImageView fitHeight="26.0" fitWidth="32.0" layoutX="815.0" layoutY="1.0" pickOnBounds="true" preserveRatio="true" fx:id="xImage" />
