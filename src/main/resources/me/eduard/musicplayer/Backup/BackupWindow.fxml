<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="corePane" prefHeight="454.0" prefWidth="820.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.eduard.musicplayer.Components.BackupWindow">
   <children>
      <Label layoutX="14.0" layoutY="37.0" text="Application Backup" wrapText="true">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <Label alignment="TOP_LEFT" layoutX="14.0" layoutY="86.0" prefHeight="57.0" prefWidth="755.0" text="Save a backup of the current state of the Music Player, so you can restore it later if you uninstall the app and decide to come back, or something bad or unexpected happens" wrapText="true">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label layoutX="14.0" layoutY="164.0" text="Path of the Backup:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TextField fx:id="backupPathField" layoutX="176.0" layoutY="165.0" prefHeight="25.0" prefWidth="532.0" promptText="Manually type the backup path here or browse using buttons below" />
      <Button fx:id="createBackup" layoutX="417.0" layoutY="295.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="112.0" text="Create backup" />
      <Button fx:id="restoreBackup" layoutX="293.0" layoutY="295.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="112.0" text="Restore a backup" />
      <Label fx:id="statusLabel" alignment="CENTER" layoutX="12.0" layoutY="419.0" prefHeight="28.0" prefWidth="707.0">
         <font>
            <Font size="19.0" />
         </font>
      </Label>
      <Button fx:id="browse" layoutX="713.0" layoutY="165.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="93.0" text="Browse..." />
      <Button fx:id="cancel" layoutX="722.0" layoutY="421.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="93.0" text="Cancel" />
   </children>
</AnchorPane>
